{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "clipboard-x:default",
    "fs:default",
    "autostart:default",
    "log:default",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "os:default",
    "dialog:default",
    "updater:default",
    "process:default",
    "macos-permissions:default",
    "fs-pro:default",
    "fs:read-all",
    "fs:write-all",
    {
      "allow": [
        "**/*"
      ],
      "identifier": "fs:scope"
    },
    "notification:default"
  ]
}